generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id              String    @id @default(uuid())
  nome            String
  email           String    @unique
  senhaHash       String
  telefone        String?
  endereco        String
  dataCadastro    DateTime  @default(now())
  produtos        Produto[]
  ofertas         Oferta[]
}

model Produto {
  id              String   @id @default(uuid())
  titulo          String
  descricao       String?
  preco           Float
  categoria       String
  urlImagem       String?
  dataPublicacao  DateTime @default(now())
  vendedorId      String
  vendedor        Usuario  @relation(fields: [vendedorId], references: [id])
  @@index([vendedorId])
  ofertas         Oferta[]
}

model Oferta {
  id              String   @id @default(uuid())
  usuario         Usuario  @relation(fields: [usuarioId], references: [id], onDelete: Cascade)
  usuarioId       String
  produto         Produto  @relation(fields: [produtoId], references: [id], onDelete: Cascade)
  produtoId       String
  dataOferta      DateTime @default(now())
  @@unique([usuarioId, produtoId])
}